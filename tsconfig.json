{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "alwaysStrict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "target": "esnext",
    "useDefineForClassFields": true
  }
}
